rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Admin email - ONLY this user can write
    function isAdmin() {
      return request.auth != null && 
             request.auth.token.email == "jaswanth.suvvari@devilgamer.in";
    }
    
    // Blogs collection - public read, admin-only write
    match /blogs/{blogId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }
    
    // Categories collection - public read, admin-only write
    match /categories/{categoryId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }
    
    // Subscriptions - anyone can subscribe, only admin can read all
    match /subscriptions/{subscriptionId} {
      allow create: if true;
      allow read, update, delete: if isAdmin();
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
